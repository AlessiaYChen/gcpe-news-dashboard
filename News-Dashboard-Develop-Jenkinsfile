node('master') {

  stage('Build') {
		openshift.withCluster() {
			openshift.withProject() {
			  echo "Building builder..."
				def bc = openshift.selector('bc', 'news-dashboard-develop')
				def buildSelector1 = bc.startBuild()
        openshift.tag("news-dashboard:latest", "news-dashboard:dev")
			  openshift.tag("news-dashboard:latest", "news-dashboard:test")
			}
		}
  }

  stage('Deploy on Dev') {
		openshift.withCluster() {
      openshift.withProject("05e933-dev") {
		    echo "Deploying to dev..."
			  openshift.selector("dc", "news-dashboard").rollout().latest()
		  }
		}
	}
  timeout(240) {
    stage('Deploy on Test') {
      input "Deploy to test?"
      openshift.withCluster() {
        openshift.withProject("05e933-test") {
          openshift.selector("dc", "news-dashboard").rollout().latest()
        }
      }
    }
  }

}
